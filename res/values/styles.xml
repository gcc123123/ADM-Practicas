<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="PlainText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/plain_text</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="MainText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
    </style>
    
    <style name="PlainButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@color/button_background</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="PlayAnswerButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@color/play_answer_button_background</item>
        
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="MainButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@color/button_background</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
    </style>

</resources>
